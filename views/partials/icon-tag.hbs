<div class="p-1 text-slate-700 flex flex-row">
  <span class="sr-only">{{title}}: </span>
  <i class="fa fa-{{icon}} text-m mr-2 text-sky-500 w-2 inline-flex flex-row items-center justify-center"></i>
  {{#if url}}
    <a href="{{url}}"> {{text}} <i class="fa fa-external-link text-xs" aria-hidden="true"></i></a>
  {{else}}
    <span>{{text}}</span>
  {{/if}}
</div>